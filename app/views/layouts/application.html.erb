<% content_for :titulo do %>
    <%= Sip.titulo %>
<% end %>

<% content_for :linkhref do %>
  <link href='https://fonts.googleapis.com/css?family=Crete+Round' rel='stylesheet' type='text/css'>
<% end %>


<% content_for :menu do %>
  <%= menu_group do %>
    <% if !current_usuario.nil? %>
      <% if can? :read, Cor1440Gen::Actividad %>
        <%= drop_down "Actividades" do %>
          <%= menu_item "Listado", cor1440_gen.actividades_path %>
          <%= menu_item "Nueva Actividad", cor1440_gen.new_actividad_path %>
          <%= menu_item "Conteo de Actividades", cor1440_gen.contar_actividades_path %>
          <% if can? :index, Sip::Actorsocial %>
            <%= menu_item "Actores Sociales", sip.actoressociales_path %>
          <% end %>
          <% if can? :manage, Sip::Persona %>
            <%= menu_item "Personas", sip.personas_path %>
          <% end %>
          <% if can? :edit, :contextoac %>
            <%= menu_item "Reporte Trienal 2015-2017 Indicador 1.1", main_app.reportes_indicador11_path %>
            <%= menu_item "Reporte Trienal 2015-2017 Objetivo Especifico 2", main_app.reportes_objetivoe2_path %>
            <%= menu_item "Reporte Trienal 2015-2017 Cuadro Actividades", main_app.reportes_cuadroactividades_path %>
          <% end %>
        <% end %>
      <% end %>
      <% if can? :index, Cor1440Gen::Mindicadorpf %>
        <%= drop_down "Indicadores" do %>
          <!--%= menu_item "Avance en indicadores de Efecto", 
            main_app.efectos_path %-->
          <!--% if can? :edit, Cor1440Gen::Proyectofinanciero %-->
            <%= menu_item "Medición", 
              main_app.mindicadorespf_path %>
          <!--% end %-->
        <% end %>
      <% end %>

      <% if can? :read, Cor1440Gen::Proyectofinanciero %>
        <%= drop_down "Compromisos y Convenios" do %>
          <%= menu_item "Listado de Compromisos Institucionales", 
            cor1440_gen.proyectosfinancieros_path %>
          <% if can? :new, Cor1440Gen::Proyectofinanciero %>
            <%= menu_item "Validar Compromisos Institucionales", 
              cor1440_gen.validar_proyectosfinancieros_path %>
          <% end %>
          <% if can? :edit, ::Convenio %>
            <%= menu_item "Listado Convenios Interinstitucionales Marco", 
              main_app.convenios_path %>
          <% end %>
          <% if can? :edit, ::Tasacambio%>
            <%= menu_item "Tasas de cambio", main_app.tasascambio_path %>
          <% end %>
        <% end %>
      <% end %>
 
    <% end %>
  <% end %>
  <%= menu_group :pull => :right do %>
    <% if can? :read, Heb412Gen::Doc%>
      <%= menu_item "Documentos y Plantillas", heb412_gen.sisini_path %>
    <% end %>
    <% if !current_usuario.nil? %>
      <%= drop_down "Administrar" do %>
        <%= menu_item "Clave", main_app.editar_registro_usuario_path %>
        <% if can? :manage, ::Heb412Gen::Plantillahcm %>
          <%= menu_item "Plantillas para listados en hojas de calculo",
            heb412_gen.plantillashcm_path %>
        <% end %>
        <% if can? :manage, ::Heb412Gen::Plantillahcr %>
          <%= menu_item "Plantillas para un registro en hoja de calculo",
            heb412_gen.plantillashcr_path %>
        <% end %>
        <% if can? :manage, ::Heb412Gen::Plantilladoc %>
          <%= menu_item "Plantillas para un registro en documento",
            heb412_gen.plantillasdoc_path %>
        <% end %>
        <% if can? :read, ::Usuario %>
          <%= menu_item "Directorio/Organigrama", main_app.grupos_arbol_path %>
          <%= menu_item "Usuarios", main_app.usuarios_path %>
        <% end %>
        <% if can? :manage, :tablasbasicas %>
          <%= menu_item "Tablas Básicas", sip.tablasbasicas_path %>
        <% end %>
        <% if can? :manage, Mr519Gen::Formulario %>
          <%= menu_item "Formularios", mr519_gen.formularios_path %>
        <% end %>
        <% if can? :read, Mr519Gen::Encuestausuario %>
          <%= menu_item "Encuestas a usuarios CRECER", mr519_gen.encuestasusuario_path %>
        <% end %>
        <% if can? :read, Mr519Gen::Encuestausuario %>
          <!--%= menu_item "Planes de encuestas a Actores Sociales", 'x'#planesencuesta_path %-->
          <%= menu_item "Encuestas a contactos de Actores Sociales", mr519_gen.encuestaspersona_path %>
        <% end %>
        <%= menu_item "Ver Control de Acceso", sip.ayuda_controldeacceso_path %>
      <% end %>
      <%= menu_item "Salir #{current_usuario.nusuario}", main_app.sign_out_path %>
    <% else %>
      <%= menu_item "Acerca de", sip.acercade_path %>
      <%= menu_item "Iniciar Sesión", main_app.new_usuario_session_path %> 
    <% end %>
  <% end %>
<% end %>

<% content_for :footer do %>
  <p><span class='derechos'>Dominio Público de acuerdo a Legislación Colombiana<br/>
    Personalización desarrollado para el <a href="http://www.nocheyniebla.org">Banco de Datos del CINEP/PPP</a> por <a href="http://www.pasosdeJesus.org" target="_blank">Pasos de Jesús</a>. 2015. 
  </span></p>
<% end %>

