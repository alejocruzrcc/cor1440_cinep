<% if can?(:edit, :contextoac) %>
  <% wu = gruposids.count == 0 ?  'TRUE=FALSE' : 
    "fechadeshabilitacion IS NULL 
         AND  id IN (SELECT usuario_id FROM sip_grupo_usuario WHERE 
         (sip_grupo_id IN (#{gruposids.join(', ')})))
    " 
  %>

  <% umgu = Sip::Usuario.where(wu).
    order(:nombres, :apellidos, :nusuario) %>

  <%= f.association :responsable,
    collection: umgu,
    include_blank: false,
    label: "Responsable del equipo",
    label_method: lambda { |t| 
      r = ""
      r += t.nombres + " " if t.nombres
      r += t.apellidos if t.apellidos
      r += ' -  ' + t.nusuario
      r 
    },
    value_method: :id,
    selected:  f.object.usuario_id ? f.object.usuario_id : 
      current_usuario.id,
    input_html: { class: 'chosen-select' } %>
  <% if f.object.contextoinv_id %>
    <div class="panel panel-default">
      <div class="panel-heading">Contexto</div><div class="panel-body">
  
        <!--%= f.input :contexto, as: :text %-->
        <%= f.simple_fields_for :contextoinv do |c| %>
          <% #byebug %>
          <%= c.input :id, as: :hidden %>
          <%= c.input :usuario_id, as: :hidden, input_html: { 
            value: f.object.usuario_id ? f.object.usuario_id : 
            current_usuario
          } %>
          <%= c.input :fechainicio,
            :input_html => { 
              "data-behaviour" => "datepicker",
              readonly: 'readonly'
            },
            :as => :string, :label => "Fecha Inicial" 
          %>
          <%= c.input :fechafin,
            :input_html => { 
              "data-behaviour" => "datepicker",
              readonly: 'readonly'
            },
            :as => :string, :label => "Fecha Final" 
          %>
          <% ldh = Sip::Grupo.where("nombre LIKE 'LÃ­nea Derechos Humanos%'").take %>
          <%= c.input :regiongrupo,
            input_html: {
              readonly: 'readonly',
              value: c.object.regiongrupo.nombre
            }
          %>
          <%= c.input :contexto %>
        <% end %>
      </div> <!-- panel-body -->
    </div> <!-- panel panel-default -->
  <% end %>
<% end %>
