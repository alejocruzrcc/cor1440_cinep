<%= f.input :nombre %>
<%= f.input :referencia %>
<%= f.input :referenciacinep %>

<%= f.association :financiador,
  collection: Cor1440Gen::Financiador.habilitados,
  label_method: :nombre,
  value_method: :id 
%>
<%= f.input :fuentefinanciacion %>
<%= f.input :respagencia %>
<%= f.input :emailrespagencia %>
<%= f.input :telrespagencia %>

<%= f.input :fechainicio, :input_html => { 
  "data-behaviour" => "datepicker" },
  :as => :string
%>

<%= f.input :fechacierre, :input_html => { 
  "data-behaviour" => "datepicker" },
  :as => :string
%>

<%
  f.object.duracion = ''
  if f.object.fechainicio && f.object.fechacierre then
    f.object.duracion = f.object.fechacierre - f.object.fechainicio
    f.object.duracion = f.object.duracion.round.to_s
  end
%>
<%= f.input :duracion,
  label: 'Duración en días',
  :input_html => { 'readonly' => 'readonly' }
%>

<%= f.input :fechaliquidacion, :input_html => { 
  "data-behaviour" => "datepicker" },
  :as => :string
%>

<%= f.input :compromisos %>
<%= f.input :observaciones %>

