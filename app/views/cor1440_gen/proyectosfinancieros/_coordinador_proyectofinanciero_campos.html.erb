<tr class='nested-fields'>
  <td>
    <%= f.association :coordinador,
      collection: ::Usuario.habilitados.order(:nombres, :apellidos),
      label: false,
      label_method: lambda {|t| t.nombres.to_s + ' ' + t.apellidos.to_s},
      value_method: :id
    %>
  </td>
  <td>
    <%= f.input :id, as: :hidden %>
    <%= link_to_remove_association "Eliminar", f, 
        :class => 'btn-danger' 
    %>
    <div><%= f.error_notification %></div>
  </td>
</tr>
