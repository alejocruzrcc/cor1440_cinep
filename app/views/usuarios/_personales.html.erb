
<div class="row">
  <div class="col-sm-4">
    <%= p.input :tdocumento_id,
      collection: Sip::Tdocumento.habilitados,
      label_method: :nombre,
      value_method: :id 
    %>
  </div>
  <div class="col-sm-4">
    <%= p.input :numerodocumento %>
  </div>
  <div class="col-sm-4">
    <%= p.input :lugardocumento %>
  </div>
</div>

<div class="row">
  <div class="col-sm-4">
    <% @anios = *(1900..Date.today.year) %>
    <%= p.input :anionac, 
      collection: @anios 
    %>
  </div>
  <div class="col-sm-4">
    <% @meses = [
      ["ENERO", 1], 
      ["FEBRERO", 2], 
      ["MARZO", 3], 
      ["ABRIL", 4], 
      ["MAYO", 5], 
      ["JUNIO", 6], 
      ["JULIO", 7], 
      ["AGOSTO", 8], 
      ["SEPTIEMBRE", 9], 
      ["OCTUBRE", 10], 
      ["NOVIEMBRE", 11], 
      ["DICIEMBRE", 12]] %>
    <%= p.input :mesnac, 
      collection: @meses
    %>
  </div>
  <div class="col-sm-3">
    <% @dias = *(1..31) %>
    <%= p.input :dianac, collection: @dias %>
  </div>
  <div class="col-sm-3">
    <%= p.input :sexo, collection: [["SIN INFORMACIÃ“N", :S], 
                                    ["FEMENINO", :F], ["MASCULINO", :M]], 
    include_blank: false %>
  </div>
</div>

<div class="row">
  <div class="col-sm-3">
    <%= p.association :pais,
      collection: Sip::Pais.habilitados,
      label_method: :nombre,
      value_method: :id %>
  </div>
  <div class="col-sm-3">
    <%= p.association :departamento,
      collection: (Sip::Departamento.habilitados.where(
        id_pais: p.object.id_pais)),
        label_method: :nombre,
        value_method: :id %>
  </div>
  <div class="col-sm-3">
    <%= p.association :municipio,
      collection: ( Sip::Municipio.habilitados.where(
        id_departamento: p.object.id_departamento)),
        label_method: :nombre,
        value_method: :id 
      %>
  </div>
  <div class="col-sm-3">
    <%= p.association :clase,
      collection: (Sip::Clase.habilitados.where(
        id_municipio: p.object.id_municipio)),
        label_method: :nombre,
        value_method: :id 
      %>
  </div>
</div>


<div class="row">
  <div class="col-sm-4">
    <%= f.input :direccionresidencia %>
  </div>
  <div class="col-sm-4">
    <%= f.input :numhijos %>
  </div>
  <div class="col-sm-4">
    <%= f.input :numhijosmen12 %>
  </div>
</div>
<div class="row">
  <div class="col-sm-4">
   <%= f.association :niveleducacion,
      collection: ::Niveleducacion.habilitados,
      label_method: :nombre,
      value_method: :id %>
  </div>
  <div class="col-sm-4">
    <%= f.association :profesion,
      collection: ::Profesion.habilitados,
      label_method: :nombre,
      value_method: :id %>
  </div>
  <div class="col-sm-4">
   <%= f.input :areaestudios, readonly: true %>
  </div>

</div>

