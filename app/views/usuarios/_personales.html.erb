<%= p.input :tdocumento_id,
  collection: Sip::Tdocumento.habilitados,
  label_method: :nombre,
  value_method: :id 
%>

<%= p.input :numerodocumento %>

<%= p.input :lugardocumento %>

<div class="row">
  <div class="col-sm-4">
    <% @anios = *(1900..Date.today.year) %>
    <%= p.input :anionac, 
      collection: @anios 
    %>
  </div>
  <div class="col-sm-4">
    <% @meses = [
      ["ENERO", 1], 
      ["FEBRERO", 2], 
      ["MARZO", 3], 
      ["ABRIL", 4], 
      ["MAYO", 5], 
      ["JUNIO", 6], 
      ["JULIO", 7], 
      ["AGOSTO", 8], 
      ["SEPTIEMBRE", 9], 
      ["OCTUBRE", 10], 
      ["NOVIEMBRE", 11], 
      ["DICIEMBRE", 12]] %>
    <%= p.input :mesnac, 
      collection: @meses
    %>
  </div>
  <div class="col-sm-4">
    <% @dias = *(1..31) %>
    <%= p.input :dianac, collection: @dias %>
  </div>
</div>

