
<div class="row">
  <div class="col-sm-6">
    <%= f.input :encrypted_password %>
  </div>
  <div class="col-sm-6">
    <%= f.input :rol,
      collection: Ability::ROLES.select { |v| v.last != 0 },
      label: "Rol",
      input_html: {
        title: 'En general debe ser operador.  AtenciÃ³n: Administradores y directivos pueden editar todo',
        'data-toggle' => 'tooltip', },
      include_blank: false
    %>
  </div>
</div>
                               
<div class="row">
  <div class="col-sm-6">
    <%= f.input :uidNumber,
      readonly: true %>
  </div>
  <div class="col-sm-6">
    <%= f.input :no_modificar_ldap,
      as: :boolean,
      inline_label: "No modificar directorio LDAP",
      boolean_style: :nested %>
  </div>
</div>

<div class="row">
  <div class="col-sm-6">
    <%= f.input :fechacreacion_localizada, :input_html => { 
      "data-behaviour" => "datepicker" },
      :as => :string %>
  </div>
  <div class="col-sm-6">
    <%= f.input :fechadeshabilitacion_localizada, :input_html => { 
      "data-behaviour" => "datepicker" },
      :as => :string %>
  </div>
</div>

<div class="row">
  <div class="col-sm-4">
    <%= f.input :failed_attempts %>
  </div>
  <div class="col-sm-4">
    <%= f.input :unlock_token%>
  </div>
  <div class="col-sm-4">
    <%= f.input :locked_at, 
      as: :string, 
      input_html: { class: 'datepicker'} %>
  </div>
</div>
